[x1, x2] = reshape(line, L1, L2)
f.write(x1, x2)
f.close()

def reshape(x1, x2, L1, L2):
I = x2 * L1 + x1
return I

if __name__ == '__main__':

L1 = 50
L2 = 57
grid = []
with open("input_coordinates_7_1.txt") as f:
while True:
line = f.readline()
if not line:
break

f = open('output_coordinates_7_1.txt', mode='w')
f.write('index')
for i in range(1, 2850):
line = grid [i].strip('\n')
line = line.split('\t')
x1 = int(grid[0])
x2 = int(grid[1])
index = reshape(x1, x2, L1, L2)
f.write(index)
f.close()
